<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cs112.ud2.HelloController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Pokémon Inventory App" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <TextField fx:id="nameField" promptText="Enter Pokémon Name" />
    <TextField fx:id="typeField" promptText="Enter Pokémon Type" />
    <Button text="Add Pokémon" onAction="#onAddButtonClick" />
    <Button text="Clear List" onAction="#onClearButtonClick" />

    <ListView fx:id="pokemonList" prefHeight="200" />
    <Label fx:id="statusLabel" text="Status: Ready" />
</VBox>
